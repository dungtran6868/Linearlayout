<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">
    <LinearLayout
        android:layout_weight = "2"
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:background="#21D126"
                android:text="1"
                android:textColor="#000000"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:background="#fe2200"
                android:text="3"
                android:textColor="#000000"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:background="#cc8378"
                android:text="4"
                android:textColor="#000000"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_weight = "2"
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="2"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#bac754"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="#3588b7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <TextView
                    android:text="6"
                    android:layout_weight="1"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="#6b2c63"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="7"
                        android:textSize="35sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="#71163f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="8"
                        android:textSize="35sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="#b77621"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="9"
                        android:textSize="35sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="#9A9098"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>